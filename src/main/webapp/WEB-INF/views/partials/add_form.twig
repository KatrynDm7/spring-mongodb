{% extends '../layout/layout.twig' %}

{% block content %}
    <form method="POST" action="/add" role="form">
        <input type="hidden" name="id" value="{{ contact.id }}"/>
        <div class="form-group">
            <label for="name">{{ "Name"|trans }}:</label>
            <input type="text" class="form-control" name="name" value="{{ contact.name }}">
        </div>
        <div class="form-group">
            <label for="number">{{ "Number"|trans }}:</label>
            <label>{{ "phone.rule"|trans }}</label>
            <input type="text" class="form-control" name="number" value="{{ contact.number }}">
            {{ numberError }}
        </div>
        <div class="form-group">
            <label for="email">{{ "E-mail"|trans }}:</label>
            <input type="text" class="form-control" name="email" value="{{ contact.email }}">
        </div>
        <div class="form-group">
            <input type="hidden" name="date" value="{{ contact.date }}"/>
        </div>
        <input type="submit" value="{{ "Submit"|trans }}"/>
    </form>
{% endblock %}